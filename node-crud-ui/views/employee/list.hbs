<h3>Employees List</h3>
<a href="/employee" class="btn btn-secondary"><i class="fa fa-plus"></i> Create New</a>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Mobile No</th>
      <th>City</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each list}}

      <tr>
        <td>{{ this.fullname }}</td>
        <td>{{this.email}}</td>
        <td>{{this.mobile}}</td>
        <td>{{this.city}}</td>
        <td>
          <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa lg" aria-hidden="true"></i></a>&nbsp;
          <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this employee ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
        </td>
      </tr>

    {{/each}}
  </tbody>
</table>