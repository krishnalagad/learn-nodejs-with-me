<h3> {{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">

  <input type="hidden" name="_id" value="{{employee._id}}" />

  <div class="form-group">
    <label>Full Name</label>
    <input
      type="text"
      class="form-control"
      name="fullname"
      placeholder="Ex. John Snow"
      value="{{employee.fullname}}"
      required
    />
    <div class="text-danger">
      {{employee.fullnameError}}
    </div>
  </div>
  <div class="form-group">
    <label>Email</label>
    <input
      type="text"
      class="form-control"
      name="email"
      placeholder="Ex. krishna@gmail.com"
      value="{{employee.email}}"
      required
    />
    <div class="text-danger">
      {{employee.emailError}}
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Mobile</label>
      <input
        type="text"
        class="form-control"
        name="mobile"
        placeholder="Ex. 9867542345"
        value="{{employee.mobile}}"
        required
      />
    </div>
    <div class="form-group col-md-6">
      <label>City</label>
      <input
        type="text"
        class="form-control"
        name="city"
        placeholder="Ex. Kolkata, Pune, Delhi"
        value="{{employee.city}}"
        required
      />
    </div>
  </div>

  <div class="form-group">
    <button class="btn btn-info" type="submit">
      <i class="fa fa-database"></i>&nbsp;Submit</button>
    <a href="/employee/list" class="btn btn-secondary"><i
        class="fa fa-list-alt"
      ></i>&nbsp;View All</a>
  </div>

</form>